<%= render 'shared/second-header' %>

<%= form_with model:@user , url: user_registration_path, method: :post, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>
  <%= render 'shared/error_messages', model: f.object %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :nickname, "ニックネーム(必須)" %><br />
      <%= f.text_area :nickname, class:"form-design" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :email, "メールアドレス(必須)" %><br />
      <%= f.email_field :email, class:"form-design", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :password, "パスワード(必須)" %>
      <% if @minimum_password_length %>
      <em><br>(<%= @minimum_password_length %>文字以上の半角英数字)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-design", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <%= f.label :password_confirmation, "パスワード(確認)" %><br />
      <%= f.password_field :password_confirmation, class:"form-design", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="register-btn">
    <%= f.submit "新規登録" ,class:"register-black-btn" %>
  </div>
</div>
<% end %>

<%= render 'shared/second-footer'%>

